<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./layouts/head.ejs') %>
        <link href="/assets/vendor/remixicon/remixicon.css" rel="stylesheet">
        <link href="/assets/vendor/simple-datatables/style.css" rel="stylesheet">

        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
        <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
</head>

<body>

    <%- include('./layouts/header.ejs') %>
    <%- include('./layouts/sidebar.ejs') %>


            <main id="main" class="main" style=" padding-left: 20px; padding-right: 20px;">

                <div class="pagetitle" style="padding-top: 10px;">
                    <h1>Transactions</h1>
                </div>

                <section class="section">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="card">
                                <div class="card-body">

                                    <form class="row g-3" action="/transactions" method="GET" >
                                        <div class="col-md-5">
                                            <label for="validationDefault01" class="form-label">Device Number</label>
                                            <div class="col-sm-10">
                                                <select class="form-select" aria-label="Default select example"
                                                    id="deviceNumber" name="deviceNumber">
                                                    <option selected value="">All Device</option>

                                                    <% for (let device of data.devices) { %>
                                                        <option value="<%= device.deviceNumber %>">
                                                            <%= device.deviceNumber %>
                                                        </option>
                                                    <% } %>
                                                </select>
                                            </div>
                                        </div>

                                        <div class="col-md-2">
                                            <label for="datetime" class="form-label">Selete Datetime</label>
                                            <input class="form-control" type="date" id="datetime" name="datetime" >
                                        </div>

                                        <div class="col-md-2">
                                            <label for="" class="form-label"><span>&nbsp;</span></label>
                                            <button class="form-control btn btn-primary" type="submit">Search</button>
                                        </div>
                                    </form>
                                    <!-- End Browser Default Validation -->

                                </div>
                            </div>
                        </div>
                    </div>
                </section>

                <section class="section">
                    <div class="row">
                        <div class="col-lg-12">

                            <div class="card">
                                <div class="card-body">
                                    <!-- <h5 class="card-title">Transactions</h5> -->

                                    <div class="table-responsive">
                                        <!-- Table with stripped rows -->
                                        <table class="table datatable">
                                            <thead>
                                                <tr>
                                                    <!-- <th scope="col">#</th> -->
                                                    <th style="text-align: center;" scope="col">Device Number</th>
                                                    <th style="text-align: center;" scope="col">Latitude</th>
                                                    <th style="text-align: center;" scope="col">Longitude</th>
                                                    <th style="text-align: center;" scope="col">Temperature</th>
                                                    <th style="text-align: center;" scope="col">Humidity</th>
                                                    <th style="text-align: center;" scope="col">Battery Percent</th>
                                                    <th style="text-align: center;" scope="col">Time</th>
                                                    <th style="text-align: center;" scope="col">Created At</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <% for (let row of data.transactions) { %>
                                                    <tr>
                                                        <!-- <th scope="row">1</th> -->
                                                        <td style="text-align: center;">
                                                            <%= row.deviceNumber %>
                                                        </td>
                                                        <td style="text-align: right;">
                                                            <%= row.latitude %>
                                                        </td>
                                                        <td style="text-align: right;">
                                                            <%= row.longitude %>
                                                        </td>
                                                        <td style="text-align: right;">
                                                            <%= row.temperature %>
                                                        </td>
                                                        <td style="text-align: right;">
                                                            <%= row.humidity %> %
                                                        </td>
                                                        <td style="text-align: right;">
                                                            <%= row.batteryPercent %> %
                                                        </td>
                                                        <td style="text-align: center; min-width: 200px;">
                                                            <%= row.formatTime %>
                                                        </td>
                                                        <td style="text-align: center; min-width: 200px;">
                                                            <%= row.formatCreatedAt %>
                                                        </td>
                                                    </tr>
                                                    <% } %>
                                            </tbody>
                                        </table>
                                        <!-- End Table with stripped rows -->
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </section>


            </main><!-- End #main -->
            <script type="text/javascript">
                $(function () {
                    $('#datepicker').datepicker();
                });
            </script>
            </script>

            <%- include('./layouts/footer.ejs') %>